
<ScrollView
    android:id="@+id/scrollView5"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/lessondef5"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="asdas"
            android:background="@drawable/border_all"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Title5"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_below="@+id/lessondef5"
            android:text="Important Notes"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/Title5"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:background="#FFFFFF"
            android:paddingBottom="10dp"
            android:text="asd"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:id="@+id/txtNotes"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/txtNotes"
            android:textSize="15sp"
            android:text="Syntax:"
            android:id="@+id/syntax5"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/syntax5"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:background="#FFFFFF"
            android:paddingBottom="10dp"
            android:text="asd"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:id="@+id/syntaxSample5"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/syntaxSample5"
            android:textSize="15sp"
            android:text="Example:"
            android:id="@+id/example5"/>
        <com.thesis.protocode.PlayGifView
            android:layout_marginTop="20dp"
            android:id="@+id/viewGif5"
            android:background="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/example5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:background="#ff11a24e"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/viewGif5"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
            android:id="@+id/left5"/>
        <ImageButton
            android:background="#ff11a24e"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/viewGif5"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:id="@+id/right5"/>

    </RelativeLayout>

</ScrollView>