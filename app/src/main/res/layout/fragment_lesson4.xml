<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@id/scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/lessondef4"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="asdas"
            android:background="@drawable/border_all"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Title4"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_below="@+id/lessondef4"
            android:text="Types of Function"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/Title4"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:background="#FFFFFF"
            android:paddingBottom="10dp"
            android:text="asd"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:id="@+id/txtTypesFunction"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/txtTypesFunction"
            android:textSize="15sp"
            android:text="Syntax:"
            android:id="@+id/syntax4"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/syntax4"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:background="#FFFFFF"
            android:paddingBottom="10dp"
            android:text="asd"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:id="@+id/syntaxSample"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/syntaxSample"
            android:textSize="15sp"
            android:text="Formal Parameters:"
            android:id="@+id/formalparam"/>
        android:id="@+id/syntax4"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/formalparam"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:background="#FFFFFF"
            android:paddingBottom="10dp"
            android:text="asd"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:id="@+id/ParamSample"/>

        <com.thesis.protocode.PlayGifView
            android:layout_marginTop="20dp"
            android:id="@+id/viewGif4"
            android:background="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ParamSample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</ScrollView>


