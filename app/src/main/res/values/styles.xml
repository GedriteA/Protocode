<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplasScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextViewLineNumber">
    <item name="android:textSize">15.0sp</item>
    <item name="android:padding">1.0dip</item>
    <item name="android:layout_marginTop">2.0dip</item>
    <item name="android:layout_marginRight">2.0dip</item>
    <item name="android:inputType">textMultiLine</item>


        <!-- Base Decoder. -->
    </style>
        <style name="ButtonsCodeEditorTitleBar">
        <item name="android:background">@drawable/grid_view_item_click_bg</item>
        <item name="android:paddingTop">1.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">28.0dip</item>
        <item name="android:layout_height">28.0dip</item>
        <item name="android:layout_marginLeft">6.0dip</item>
        <item name="android:layout_marginRight">1.0dip</item>
        <item name="android:tint">?colorAccent</item>
    </style>
    <style name="CodeEditorTitleBarbgDark">
        <item name="android:background">@color/codeEditorTitleBarbgColorDark</item>
    </style>
    <style name="CodeEditorTitleBarbgLight">
        <item name="android:background">@color/codeEditorTitleBarbgColorLight</item>
    </style>

    <style name="protoTheme" parent="AppTheme">
    <item name="colorAccent">@color/green</item>
    </style>
    <style name="proto" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/green</item>
    </style>
</resources>
